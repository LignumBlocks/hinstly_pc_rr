<div class="relative overflow-x-auto mb-8 h-screen bg-white">
  <div class="flex items-center justify-between flex-column pl-6 flex-wrap md:flex-row md:space-y-0 bg-white dark:bg-gray-900">
    <div class="py-6">
      <% breadcrumbs = [["Prompts", prompts_path]] %>
      <%= render partial: "layouts/breadcrumbs", locals: { breadcrumbs: breadcrumbs } %>
    </div>
    <div class="flex items-center justify-end flex-column flex-wrap md:flex-row md:space-y-0 bg-white dark:bg-gray-900">
      <div class="mr-2">
      </div>
    </div>
  </div>
  <div class="px-6 py-4 bg-white">
    <%= form_with(model: @prompt) do |form| %>
      <div class="grid grid-cols-2 md:grid-cols-2 sm:gap-6">
        <div>
          <div class="mb-4">
            <%= form.label :name, class:"block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= form.text_field :name, required: true, class:"p-2 w-full border border-gray-300 rounded-md" %>
          </div>

          <div class="mb-4">
            <%= form.label :code, class:"block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= form.text_field :code, required: true, class:"p-2 w-full border border-gray-300 rounded-md" %>
          </div>

          <div class="mb-4">
            <%= form.label :system_prompt, class:"block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= form.text_area :system_prompt, required: true, rows:3, class:"p-2 w-full border border-gray-300 rounded-md" %>
          </div>
          <div class="flex mt-4">
            <%= form.submit "Update prompt", class:"btn btn-primary" %>
          </div>
        </div>

        <div class="mb-4">
          <%= form.label :prompt, class:"block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
          <%= form.text_area :prompt, required: true, rows:10, class:"p-2 w-full border border-gray-300 rounded-md" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
