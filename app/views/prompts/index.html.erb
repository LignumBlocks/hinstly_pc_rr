<div class="relative overflow-x-auto mb-8">
  <div class="flex items-center justify-between flex-column pl-6 flex-wrap md:flex-row md:space-y-0 bg-white dark:bg-gray-900">
    <div class="flex gap-4">
      <% breadcrumbs = [["Prompts", prompts_path]] %>
      <%= render partial: "layouts/breadcrumbs", locals: { breadcrumbs: breadcrumbs } %>
      <div>
        <%= link_to 'New Prompt', new_prompt_path, data: { turbo_frame: "modal-content", turbo_method: :get, modal_toggle: "modal" }, class: "btn btn-primary" %>
      </div>
    </div>
    <div class="flex items-center justify-end flex-column flex-wrap md:flex-row md:space-y-0 bg-white dark:bg-gray-900">
      <div class="mr-4 mt-2">
        <%= search_form_for @q, data: { turbo_frame: "search" } do |f| %>
          <label for="simple-search" class="sr-only">Search</label>
          <div class="relative w-full">
            <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
              <svg aria-hidden="true" class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
              </svg>
            </div>
            <%= f.text_field :name_cont,
                             class: "block w-full p-2 pl-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500",
                             placeholder: "Search ..." %>
            <button type="button" onclick="clearSearch()" class="absolute inset-y-0 right-0 flex items-center p-0 m-0 mr-2 text-gray-500 hover:text-gray-700 focus:outline-none focus:ring-0">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>
        <% end %>
      </div>

      
    </div>
  </div>
  <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
    <tr>
      <th scope="col" class="px-6 py-3">
        Name
      </th>
      <th scope="col" class="px-6 py-3">
        Code
      </th>
    </tr>
    </thead>
    <tbody id="prompts">
    <% @prompts.each do |prompt| %>
      <%= render partial: 'prompt', locals: { prompt: prompt } %>
    <% end %>
    </tbody>
  </table>
  <nav class="flex p-2 pl-6 px-4 items-center flex-column flex-wrap md:flex-row justify-between" aria-label="Table navigation">
    <span class="text-sm font-normal text-gray-500 dark:text-gray-400 mb-4 md:mb-0 block w-full md:inline md:w-auto">
      Showing <span class="font-semibold text-gray-900 dark:text-white"><%= @pagy.from %>-<%= @pagy.to %></span> of <span class="font-semibold text-gray-900 dark:text-white"><%= @pagy.count %></span>
    </span>
    <ul class="pt-2 inline-flex -space-x-px rtl:space-x-reverse text-sm h-8 list-none">
      <li>
        <%= link_to 'Previous', validation_sources_path(page: @pagy.prev), { disabled: @pagy.prev.blank?, class: "flex items-center justify-center px-3 h-8 ms-0 leading-tight text-gray-500 bg-white border border-gray-300 rounded-s-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white" } %>
      </li>
      <% @pagy.pages.times do |page| %>
        <li>
          <%= link_to "#{page + 1}", validation_sources_path(page: page + 1), { class: "flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white"} %>
        </li>
      <% end %>
      <li>
        <%= link_to 'Next', validation_sources_path(page: @pagy.next), { disabled: @pagy.next.blank?, class: "flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 rounded-e-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white" } %>
      </li>
    </ul>
  </nav>
</div>

<div id="modal" style="z-index: 9999;" class="fixed inset-0 flex items-center justify-center hidden bg-gray-600 bg-opacity-50">
  <div class="w-1/2 bg-white p-6 rounded-lg shadow-lg overflow-auto">


    <turbo-frame id="modal-content">
      <!-- Se cargará el contenido dinámico aquí -->
    </turbo-frame>
  </div>
</div>


<script>
    function clearSearch() {
        const input = document.querySelector('input[name="q[name_cont]"]');
        if (input.value.length > 0) {
            input.value = '';
            const form = document.querySelector('form[data-turbo-frame="search"]');
            if (form) {
                form.requestSubmit();
            }
        }
    }

    document.addEventListener("turbo:frame-load", () => {
        const modal = document.getElementById("modal");
        const modalContent = document.getElementById("modal-content");
        if (modalContent.innerHTML.trim() === "") {
            modal.classList.add("hidden");
        } else {
            modal.classList.remove("hidden");
        }
    });


</script>
