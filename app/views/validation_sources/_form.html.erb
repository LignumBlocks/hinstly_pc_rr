<%= form_with(model: validation_source, url: validation_source.new_record? ? validation_sources_path : validation_source_path(validation_source), method: validation_source.new_record? ? :post : :patch) do |form| %>
  <div class="grid">
    <div class="sm:col-span-2">
      <%= form.label :name, class:"block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
      <%= form.text_field :name, required: true, class:"p-2 w-full bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded focus:ring-primary-600 focus:border-primary-600 block p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" %>
    </div>
    <div class="sm:col-span-2 mt-4">
      <%= form.label :url_query, class:"block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
      <%= form.text_field :url_query, required: true, class:"p-2 w-full bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded focus:ring-primary-600 focus:border-primary-600 block p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" %>
    </div>
  </div>
  <div class="flex mt-4">
    <%= form.submit validation_source.new_record? ? "Save" : "Update", class:"btn btn-primary" %>
  </div>
<% end %>
