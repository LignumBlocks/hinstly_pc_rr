<nav class="flex" aria-label="Breadcrumb">
  <ol class=" list-none inline-flex items-center  rtl:space-x-reverse">
    <li class="inline-flex items-center">
      <a href="/" class="inline-flex items-center text-xl dark:text-white text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white">
        <svg class="w-5 h-5 me-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
          <path d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z"/>
        </svg>
        Home
      </a>
    </li>

    <% breadcrumbs.each do |breadcrumb| %>
      <% label = breadcrumb[0] %>
      <% link = breadcrumb[1] %>
      <% if label.present? && link.present? %>
        <li>
          <div class="flex items-center">
            <span class="ms-1 text-xl dark:text-white text-gray-600 md:ms-2 dark:text-gray-400">|</span>
            <a href="<%= link %>" class="ms-1 text-xl dark:text-white text-gray-600 hover:text-gray-900 md:ms-2 dark:text-gray-400 dark:hover:text-white"><%= label %></a>
          </div>
        </li>
      <% else %>
        <li aria-current="page">
          <div class="flex items-center">
            <span class="ms-1 text-xl dark:text-white text-gray-600 md:ms-2 dark:text-gray-400">|</span>
            <span class="max-w-xs truncate ms-1 text-xl dark:text-white text-gray-900 md:ms-2 dark:text-gray-400 dark:hover:text-white"><%= label %></span>
          </div>
        </li>
      <% end %>
    <% end %>
  </ol>
</nav>