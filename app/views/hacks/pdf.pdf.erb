          border-bottom-width: 1px;
      }
      .border-gray-100 {
          border-color: #f3f4f6;
      }
      .bg-gray-100 {
          background-color: #f3f4f6;
      }
      .py-3\.5 {
          padding-top: 0.875rem;
          padding-bottom: 0.875rem;
      }
      .pl-4 {
          padding-left: 1rem;
      }
      .pr-3 {
          padding-right: 0.75rem;
      }
      .sm\:pl-0 {
          padding-left: 0;
      }
      .hidden {
          display: none;
          visibility: hidden;
      }
      .px-3 {
          padding-left: 0.75rem;
          padding-right: 0.75rem;
      }
      .sm\:table-cell {
          display: table-cell;
      }
      .pl-3 {
          padding-left: 0.75rem;
      }
      .sm\:pr-0 {
          padding-right: 0;
      }
      .text-center {
          text-align: center;
      }
      .font-semibold {
          font-weight: 600;
      }
      .text-gray-900 {
          color: #111827;
      }
      .text-blue-600 {
          color: #2563eb;
      }
      .dark\:text-blue-500 {
          color: #3b82f6;
      }
