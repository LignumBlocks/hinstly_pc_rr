<div class="p-6 pt-0">
  <div id="accordion-flush-b" data-accordion="collapse" data-active-classes="bg-white dark:bg-gray-900 text-gray-900 dark:text-white" data-inactive-classes="text-gray-500 dark:text-gray-400">
    <h4 id="accordion-flush-heading-b-1">
      <button type="button" class="flex items-center justify-between w-full py-5 font-medium rtl:text-right  text-gray-500 border-b border-gray-200 dark:border-gray-700 dark:text-gray-400 gap-3" data-accordion-target="#accordion-flush-body-b-1" aria-expanded="true" aria-controls="accordion-flush-body-b-1">
          <span><%= hack.title %>
            <span class="<%= class_for_boolean(hack.hack_validation.present? ? hack.hack_validation.status : hack.is_hack?) %> inline-block ml-2"><%= text_for_boolean(hack.hack_validation.present? ? hack.hack_validation.status : hack.is_hack?) %></span>
          </span>

        <svg data-accordion-icon class="w-3 h-3 rotate-180 shrink-0" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5 5 1 1 5"/>
        </svg>
      </button>

    </h4>
    <div id="accordion-flush-body-b-1" class="hidden" aria-labelledby="accordion-flush-heading-b-1">
      <div class="py-4 border-b border-gray-200 dark:border-gray-700">
        <p class="mb-2 text-gray-500 dark:text-gray-400"><%= hack.summary %></p>
      </div>
    </div>

    <h4 id="accordion-flush-heading-b-2">
      <button type="button" class="flex items-center justify-between w-full py-5 font-medium rtl:text-right text-gray-500 border-b border-gray-200 dark:border-gray-700 dark:text-gray-400 gap-3" data-accordion-target="#accordion-flush-body-b-2" aria-expanded="false" aria-controls="accordion-flush-body-b-2">
        <span>Justification</span>
        <svg data-accordion-icon class="w-3 h-3 rotate-180 shrink-0" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5 5 1 1 5"/>
        </svg>
      </button>
    </h4>
    <div id="accordion-flush-body-b-2" class="hidden" aria-labelledby="accordion-flush-heading-b-2">
      <div class="py-5 border-b border-gray-200 dark:border-gray-700">
        <p class="mb-2 text-gray-500 dark:text-gray-400"><%=hack.hack_validation.present? ? hack.hack_validation.analysis : hack.justification %></p>
      </div>
    </div>

    <h4 id="accordion-flush-heading-b-3">
      <button type="button" class="flex items-center justify-between w-full py-5 font-medium rtl:text-right text-gray-500 border-b border-gray-200 dark:border-gray-700 dark:text-gray-400 gap-3" data-accordion-target="#accordion-flush-body-b-3" aria-expanded="false" aria-controls="accordion-flush-body-b-3">
        <span>Video Transcription</span>
        <svg data-accordion-icon class="w-3 h-3 rotate-180 shrink-0" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5 5 1 1 5"/>
        </svg>
      </button>
    </h4>
    <div id="accordion-flush-body-b-3" class="hidden" aria-labelledby="accordion-flush-heading-b-3">
      <div class="py-5 border-b border-gray-200 dark:border-gray-700">
        <p class="mb-2 text-gray-500 dark:text-gray-400"><%= hack.video.transcription.content %></p>
        <a href="<%= hack.video.source_link %>" target="_blank" class="text-blue-600 dark:text-blue-500 hover:underline">Ver video</a>
      </div>
    </div>

    <% if hack.is_hack? %>
      <h4 id="accordion-flush-heading-b-4">
        <button type="button" class="flex items-center justify-between w-full py-5 font-medium rtl:text-right text-gray-500 border-b border-gray-200 dark:border-gray-700 dark:text-gray-400 gap-3" data-accordion-target="#accordion-flush-body-b-4" aria-expanded="false" aria-controls="accordion-flush-body-b-4">
          <span>Queries</span>
          <svg data-accordion-icon class="w-3 h-3 rotate-180 shrink-0" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5 5 1 1 5"/>
          </svg>
        </button>
      </h4>
      <div id="accordion-flush-body-b-4" class="hidden" aria-labelledby="accordion-flush-heading-b-4">
        <div class="py-5 border-b border-gray-200 dark:border-gray-700">
          <div class="mb-2 text-gray-500 dark:text-gray-400">
            <ul class="pl-4">
              <% hack.queries.each do |query| %>
                <li><%= query.content.capitalize %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>

      <h4 id="accordion-flush-heading-b-6">
        <button type="button" class="flex items-center justify-between w-full py-5 font-medium rtl:text-right text-gray-500 border-b border-gray-200 dark:border-gray-700 dark:text-gray-400 gap-3" data-accordion-target="#accordion-flush-body-b-6" aria-expanded="false" aria-controls="accordion-flush-body-b-6">
          <span>Validation Sources</span>
          <svg data-accordion-icon class="w-3 h-3 rotate-180 shrink-0" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5 5 1 1 5"/>
          </svg>
        </button>
      </h4>
      <div id="accordion-flush-body-b-6" class="hidden" aria-labelledby="accordion-flush-heading-b-6">
        <div class="py-5 border-b border-gray-200 dark:border-gray-700">
          <div class="mb-2 text-gray-500 dark:text-gray-400">
            <ul class="pl-4">
              <% validation_links = hack.hack_validation&.links rescue "[]" %>
              <% validation_links = JSON.parse(validation_links) %>
              <% validation_links.each do |link| %>
                <li>
                  <a href="<%= link %>" target="_blank" class=" dark:text-blue-500 hover:underline"><%= link %></a>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>

      <h4 id="accordion-flush-heading-b-5">
        <button type="button" class="flex items-center justify-between w-full py-5 font-medium rtl:text-right text-gray-500 border-b border-gray-200 dark:border-gray-700 dark:text-gray-400 gap-3" data-accordion-target="#accordion-flush-body-b-5" aria-expanded="false" aria-controls="accordion-flush-body-b-5">
          <span>Scraped Sources</span>
          <svg data-accordion-icon class="w-3 h-3 rotate-180 shrink-0" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5 5 1 1 5"/>
          </svg>
        </button>
      </h4>
      <div id="accordion-flush-body-b-5" class="hidden" aria-labelledby="accordion-flush-heading-b-5">
        <div class="py-5 border-b border-gray-200 dark:border-gray-700">
          <div class="mb-2 text-gray-500 dark:text-gray-400">
            <ul class="pl-4">
              <% hack.scraped_results.each do |scraped_result| %>
                <li>
                  <a href="<%= scraped_result.link %>" target="_blank" class=" dark:text-blue-500 hover:underline"><%= scraped_result.link %></a>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>